<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:id="@+id/lyPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_katagori1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/goumrumah"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:ellipsize="end"
                android:layout_marginStart="2dp"
                android:paddingTop="2dp"
                android:id="@+id/tv_namaKatagori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="baju baru buat lebaran beli di go umkm murah meriah"
                android:fontFamily="@font/tahoma"
                android:maxLines="2"
                android:textAlignment="viewStart"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView
                android:padding="4dp"
                android:id="@+id/tv_hargaKatagori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rp200.000 "
                android:textColor="@color/textDiscount"
                android:textSize="14sp"
                android:fontFamily="@font/tahoma"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

