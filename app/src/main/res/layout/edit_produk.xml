                        android:gravity="center"
                        android:hint="19"
                        android:inputType="date"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <EditText
                        android:id="@+id/edt_edit_deskripsi_produk"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:background="@drawable/kotak_putih"
                        android:gravity="start"
                        android:hint="@string/deskripsi_dodol_tenjo"
                        android:padding="5dp" />


                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button

                            android:id="@+id/btn_TambahProdukBaruEdit"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/kotak_ungu"
                            android:fontFamily="@font/calibri"
                            android:text="Simpan"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btn_TambahProdukBatal"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/kotak_ungu"
                            android:fontFamily="@font/calibri"
                            android:text="Batal"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarE"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>